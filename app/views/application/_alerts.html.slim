- global = local_assigns.fetch(:global) { false }

- flash.each do |key, message|
  ruby:
    alert_class = case key.to_sym
      when :alert, :warning
        "alert alert-warning animate__flash"
      when :error
        "alert alert-danger animate__flash"
      when :notice, :info
        "alert alert-info animate__flipInX"
      when :success
        "alert alert-success animate__flipInX"
      else
        "alert alert-primary animate__flipInX"
      end

    alert_class += " alert-global" if global

  - if message.is_a?(String)
    - flash.delete(key)
    div(class="#{alert_class} animate__animated" role="alert")
      h5.text-center.mb-0 == message
